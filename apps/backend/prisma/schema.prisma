generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Action {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  createdAt   DateTime?  @default(now())
  updatedAt   DateTime @updatedAt
  credits     Int
  maxCredits  Int
}

// Used to describe what type of action is available. Static data described in src/db/seed.ts
model BaseAction {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  maxCredits  Int
}

model Queue {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  actionIds String[] @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
